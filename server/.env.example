# Backend Environment Variables for Production
# Copy this file to .env and replace with your actual keys

# Stripe Secret Key (starts with sk_test_ for testing, sk_live_ for production)
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# Frontend URL (your Netlify site URL)
CLIENT_URL=https://your-site-name.netlify.app

# Render uses port 10000 by default
PORT=10000

# Environment
NODE_ENV=production

# Stripe Webhook Secret (for production webhooks)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
